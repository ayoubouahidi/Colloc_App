<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@android:color/white"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Enhanced Image Section -->
        <RelativeLayout
            android:id="@+id/imageContainer"
            android:layout_width="140dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/offerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_apartment"
                android:background="@drawable/rounded_left_image"
                android:clipToOutline="true" />

            <!-- Gradient overlay for better text visibility -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradient_overlay_top" />

            <!-- Category badge on image -->
            <TextView
                android:id="@+id/offerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                android:text="Apartment"
                android:textColor="@android:color/white"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="11sp"
                android:fontFamily="@font/poppinssemibold"
                android:letterSpacing="0.05"
                android:textAllCaps="true" />

        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:id="@+id/contentSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/imageContainer"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Header with actions -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/offerPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="950"
                        android:textColor="@color/green_500"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppinsbold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" DH"
                        android:textColor="@color/green_500"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/month"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsregular"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="1dp" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <!-- Favorite Button -->
                    <ImageView
                        android:id="@+id/btnFavorite"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/ic_heart_outlined"
                        app:tint="#FF6B6B" />
                    <!-- More Button -->
                    <ImageView
                        android:id="@+id/btnMore"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_heart_outlined"
                        app:backgroundTint="#FF0000"
                        app:tint="#FF6B6B" />

                    <!-- Share Button -->
                    <ImageView
                        android:id="@+id/btnShare"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_circle_light"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:src="@drawable/ic_share"
                        app:tint="#4CAF50" />

                </LinearLayout>

            </RelativeLayout>

            <!-- Location with icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="6dp"
                    app:tint="#FF6B6B" />

                <TextView
                    android:id="@+id/offerLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_68_rodeo_drive_los_angeles"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppinsmedium"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Property features -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Bedrooms -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_bed"
                        android:layout_marginEnd="4dp"
                        app:tint="#999999" />

                    <TextView
                        android:id="@+id/bedrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/poppinsmedium" />

                </LinearLayout>

                <!-- Bathrooms -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_bath"
                        android:layout_marginEnd="4dp"
                        app:tint="#999999" />

                    <TextView
                        android:id="@+id/bathrooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/poppinsmedium" />

                </LinearLayout>

                <!-- Area -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_area"
                        android:layout_marginEnd="4dp"
                        app:tint="#999999" />

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85mÂ²"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/poppinsmedium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Status indicator (optional) -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="@color/status_available"
            android:visibility="visible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>